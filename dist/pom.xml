<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>ATHChunkClaim-dist</artifactId>
    <version>1.2</version>
    <packaging>jar</packaging>

    <parent>
        <groupId>me.gurwi</groupId>
        <artifactId>ATHChunkClaim-parent</artifactId>
        <version>1.2</version>
    </parent>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.3.0</version>
                <configuration>
                    <relocations>
                        <relocation>
                            <pattern>dev.triumphteam.gui</pattern>
                            <shadedPattern>me.gurwi.athchunkclaim.guishandler</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>com.cryptomorin.xseries</pattern>
                            <shadedPattern>me.gurwi.athchunkclaim.xseries</shadedPattern>
                        </relocation>
                    </relocations>
                    <filters>
                        <filter>
                            <artifact>*:*</artifact>
                            <excludes>
                                <exclude>com/cryptomorin/xseries/XBiome*</exclude>
                                <exclude>com/cryptomorin/xseries/NMSExtras*</exclude>
                                <exclude>com/cryptomorin/xseries/NoteBlockMusic*</exclude>
                                <exclude>com/cryptomorin/xseries/SkullCacheListener*</exclude>
                                <exclude>com/cryptomorin/xseries/XSounds</exclude>
                            </excludes>
                        </filter>
                    </filters>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>

        <dependency>
            <groupId>me.gurwi</groupId>
            <artifactId>ATHChunkClaim-core</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
        <dependency>
            <groupId>me.gurwi</groupId>
            <artifactId>worldguard7</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>me.gurwi</groupId>
            <artifactId>worldguard6</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>me.gurwi</groupId>
            <artifactId>ATHChunkClaim-bridge</artifactId>
            <version>1.0</version>
        </dependency>

    </dependencies>

</project>